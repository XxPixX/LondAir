<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="CardTitle">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:fontFamily">@string/font_family_light</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:textSize">34sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CardDescription">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:fontFamily">@string/font_family_medium</item>
        <item name="android:textColor">?android:textColorSecondaryInverse</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="MiniCardTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:fontFamily">@string/font_family_medium</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="MiniCardSubtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="MiniCardSubtitle.Truncated">
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MiniCardSummary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:fontFamily">@string/font_family_medium</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="ToolbarSpinnerStyle" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
        <item name="android:overlapAnchor">true</item>
    </style>

    <style name="SettingsItem">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="SettingsItem.Title">
        <item name="android:fontFamily">@string/font_family_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:paddingTop">20dp</item>
    </style>

    <style name="SettingsItem.Subtitle">
        <item name="android:fontFamily">@string/font_family_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

</resources>
